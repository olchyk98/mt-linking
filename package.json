{
  "name": "olink",
  "version": "0.0.1",
  "description": "A smart linker for Mediatool repository",
  "packageManager": "pnpm",
  "main": "dist/index.js",
  "repository": "https://github.com/olchyk98/mt-linking",
  "author": "Oles Odynets <olchyk98@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "pretranspile": "pnpm install",
    "predev": "pnpm install && pnpm run transpile",
    "dev": "pnpm transpile && node dist",
    "dev:verbose": "DEBUG=* pnpm dev",
    "prestart": "pnpm install && pnpm run start",
    "start": "pnpm dev",
    "lint": "pnpm biome check index.ts",
    "transpile": "rm -rf dist && esbuild index.ts --platform=node --format=cjs --sourcemap --bundle --outdir=dist/",
    "unit": "vitest",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "test": "pnpm run lint && pnpm run typecheck && pnpm unit"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.0.1",
    "blessed": "^0.1.81",
    "blessed-contrib": "^4.11.0",
    "bluebird": "^3.7.2",
    "chalk": "^4.1.2",
    "chokidar": "^3.5.3",
    "inquirer": "^12.5.2",
    "p-queue": "^6.6.2",
    "ramda": "^0.29.1",
    "redux": "^5.0.0",
    "term.js": "^0.0.7"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@mediatool/core-ui": "^1.144.0",
    "@types/blessed": "^0.1.25",
    "@types/bluebird": "^3.5.42",
    "@types/node": "^18",
    "@types/ramda": "^0.29.9",
    "commander": "^13.1.0",
    "esbuild": "^0.25.1",
    "eslint-plugin-import": "^2.29.1",
    "package-json-type": "^1.0.3",
    "ts-node": "^10.9.2",
    "typed-emitter": "^2.1.0",
    "typescript": "latest",
    "vitest": "^3.0.9"
  }
}
