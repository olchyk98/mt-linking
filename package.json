{
  "name": "olink",
  "version": "0.0.1",
  "description": "A smart linker for Mediatool repository",
  "packageManager": "pnpm",
  "main": "dist/index.js",
  "repository": "https://github.com/olchyk98/mt-linking",
  "author": "Oles Odynets <olchyk98@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "pretranspile": "pnpm install",
    "predev": "pnpm install && pnpm run transpile",
    "dev": "pnpm transpile && node --enable-source-maps dist",
    "dev:verbose": "DEBUG=* pnpm dev",
    "prestart": "pnpm install && pnpm run start",
    "start": "pnpm dev",
    "lint": "pnpm biome check index.ts",
    "transpile": "rm -rf dist && esbuild index.ts --platform=node --format=cjs --sourcemap --bundle --outdir=dist/",
    "unit": "vitest",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "test": "pnpm run lint && pnpm run typecheck && pnpm unit",
    "transpile:predeploy": "./scripts/predeploy",
    "deploy": "pnpm run transpile:predeploy && echo 'We are trying to move the executable to /usr/local/bin folder. Running with sudo.' && sudo cp ./dist/run.js /usr/local/bin/olink"
  },
  "dependencies": {
    "bluebird": "^3.7.2",
    "chalk": "^4.1.2",
    "inquirer": "^12.5.2",
    "p-queue": "^6.6.2",
    "ramda": "^0.29.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bluebird": "^3.5.42",
    "@types/node": "^18",
    "@types/ramda": "^0.29.9",
    "commander": "^13.1.0",
    "esbuild": "^0.25.1",
    "package-json-type": "^1.0.3",
    "typescript": "latest",
    "vitest": "^3.0.9"
  }
}
