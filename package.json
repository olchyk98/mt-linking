{
  "name": "mt-linking",
  "version": "0.0.1",
  "description": "A smart linker for Mediatool repository",
  "packageManager": "pnpm",
  "main": "dist/index.js",
  "repository": "https://github.com/olchyk98/mt-linking",
  "author": "Oles Odynets <olchyk98@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "pretranspile": "pnpm install",
    "predev": "pnpm install && pnpm run transpile",
    "dev": "pnpm transpile && node ./bin/run.js",
    "prestart": "pnpm install && pnpm run start",
    "start": "pnpm transpile && node ./bin/run.js",
    "lint": "pnpm biome check index.ts",
    "transpile": "rm -rf dist && esbuild ./src/commands/*.ts --platform=node --format=cjs --sourcemap --outdir=dist/commands",
    "unit": "vitest",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "test": "pnpm run lint && pnpm run typecheck && pnpm unit"
  },
  "dependencies": {
    "@oclif/core": "^4.2.10",
    "@reduxjs/toolkit": "^2.0.1",
    "blessed": "^0.1.81",
    "blessed-contrib": "^4.11.0",
    "bluebird": "^3.7.2",
    "chokidar": "^3.5.3",
    "ramda": "^0.29.1",
    "redux": "^5.0.0",
    "term.js": "^0.0.7"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/blessed": "^0.1.25",
    "@types/bluebird": "^3.5.42",
    "@types/node": "^18",
    "@types/ramda": "^0.29.9",
    "esbuild": "^0.25.1",
    "eslint-plugin-import": "^2.29.1",
    "ts-node": "^10.9.2",
    "typed-emitter": "^2.1.0",
    "typescript": "latest",
    "vitest": "^3.0.9"
  },
  "bin": {
    "mt-linking": "./bin/run.js"
  },
  "oclif": {
    "bin": "mt-linking",
    "commands": "./dist/commands",
    "dirname": "mt-linking",
    "topicSeparator": " "
  }
}
