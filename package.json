{
  "name": "mt-linking",
  "version": "0.0.1",
  "description": "A smart linker for Mediatool repository",
  "packageManager": "pnpm",
  "main": "dist/index.js",
  "repository": "https://github.com/olchyk98/mt-linking",
  "author": "Oles Odynets <olchyk98@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "pretranspile": "pnpm install",
    "predev": "pnpm install",
    "dev": "NODE_ENV=development pnpm run transpile && node dist/index.js",
    "lint": "pnpm biome check index.ts",
    "transpile": "esbuild index.ts --platform=node --bundle --sourcemap --outfile=dist/index.js",
    "unit": "vitest",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "test": "pnpm run lint && pnpm run typecheck && pnpm unit"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.0.1",
    "blessed": "^0.1.81",
    "blessed-contrib": "^4.11.0",
    "bluebird": "^3.7.2",
    "chokidar": "^3.5.3",
    "ramda": "^0.29.1",
    "redux": "^5.0.0",
    "term.js": "^0.0.7"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/blessed": "^0.1.25",
    "@types/bluebird": "^3.5.42",
    "@types/ramda": "^0.29.9",
    "esbuild": "^0.25.1",
    "eslint-plugin-import": "^2.29.1",
    "ts-node": "^10.9.2",
    "typed-emitter": "^2.1.0",
    "typescript": "latest",
    "vitest": "^3.0.9"
  }
}
